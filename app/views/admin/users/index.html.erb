<div class="container">
	<div class="row">
		<h3>ユーザー一覧</h3>

		<table class="table table-borderless">
			<thead class="thead-dark">
				<tr>
					<th>会員ID</th>
					<th>会員名</th>
					<th>メールアドレス</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td><%= user.name %></td>
				    	<td><%= user.email %></td>
				    	<td><%= link_to "退会させる",admin_user_path(user.id), method: :delete, data: { confirm: '本当に退会させますか？' }, class: "label label-danger" %></td>
					</tr>
				<% end %>
			</tbody>

		</table>
	</div>
</div>