<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <h3>ジャンル一覧・追加</h3>
            <div class="new">
            <%= form_for(@genre, url:owner_genre_path(@genre)) do |f| %>
                    <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
                    <span>有効</span><%= f.radio_button :status, false %>
                    <span>無効</span><%= f.radio_button :status, true %>
                    <%= f.submit "変更を保存する", class: "btn btn-primary" %>
            <% end %>
            </div>
        </div>
        <div class="col-sm-7"></div>
    </div>
</div>
