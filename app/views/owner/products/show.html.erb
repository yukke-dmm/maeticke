<div class="container">
  <h3>商品詳細</h3>
    <div class="row product-show">
	      <div class="col-md-5 col-sm-5 col-xs-5">
	          商品名：<%= @product.name %>(<%= @product.genre.name %>)<br>
	          <%= attachment_image_tag @product, :image , :fill, 300, 200, fallback: "no_image.jpg", size: '300x200',class:'card-img-top'%>
	      </div>
	      <div class="col-md-7 col-sm-7 col-xs-7">
	          <span>商品紹介:<br>
	            　<%= @product.introduce %>
	          </span>
	          <br>
	          <div class="card-status">
	                      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	                      <%= @product.favorites.count %>
	              　<%= @product.price %> 円　
	                  <% if @product.product_status == true %>
	                      <span class="status2">販売停止</span>
	                  <%else%>
	                      <span class="status">販売中</span>
	                  <% end %>
	          </div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-10"></div>
		<div class="col-sm-2">
		<%= link_to "編集する", edit_owner_product_path, class:"btn btn-primary btn-md btn-block btn-base-1 mt-20　d-flex align-items-end"%>
		</div>
	</div>
</div>
<br>
