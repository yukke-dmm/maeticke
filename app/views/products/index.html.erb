<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>店舗名</th>
      <th>Introduce</th>
      <th>Image</th>
      <th>Price</th>
      <th>Genre</th>
      <th>Product status</th>
      <th>Delete flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= attachment_image_tag product, :image , :fill, 200, 150, fallback: "no_image.jpg", size: '200x150'%></td>
        <td><%= product.name %></td>
        <td><%= product.owner.name %></td>
        <td><%= product.introduce %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td><% if product.product_status == true %>
              <p>販売停止</p>
            <%else%>
              <p>販売中</p>
            <% end %>
        </td>
        <td><%= product.delete_flag %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


