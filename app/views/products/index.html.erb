<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>店舗名</th>
      <th>商品紹介</th>
      <th>価格</th>
      <th>ジャンル</th>
      <th>販売状況</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= attachment_image_tag product, :image , :fill, 200, 150, fallback: "no_image.jpg", size: '200x150'%></td>
        <td>
          <%= link_to product_path(product) do %>
            <%= product.name %>
          <%end%>
        </td>
        <td>
          <%= link_to owner_path(product.owner.id) do %>
            <%= product.owner.name %>
          <% end %>
        </td>
        <td><%= product.introduce %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td><% if product.product_status == true %>
              <p>販売停止</p>
            <%else%>
              <p>販売中</p>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


