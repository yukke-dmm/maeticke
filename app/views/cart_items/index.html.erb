<h1>CartItems#index</h1>
<p>Find me in app/views/cart_items/index.html.erb</p>
<h1>カート</h1>

<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_item), method: :delete, data: { confirm: "Are you sure?"}, class: "btn-sm btn-danger"%>

<table class="table">
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td><%= attachment_image_tag cart_item.product, :image, style:"width: 100px; height: 70px; bottom: 5px;" %>
						<%=cart_item.product.name%>
					</td>
					<td><%=cart_item.product.price %></td>
					<%= form_for cart_item, url: cart_item_path(cart_item.id) do |f|%>
					<td>
						<%=f.select :count,(1..10).each{ |i| p [i]} %>
						<%= f.submit '変更', class: "btn-sm btn-success cart-btn"%>
					</td>
					<td><%= (cart_item.product.price * cart_item.count).to_i.to_s(:delimited )%>円
					</td>
					<% end %>
					<td class="cart-item"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, data: { confirm:"Are you sure?"},  class: "btn-sm btn-danger"%>

					</td>
				</tr> 
				<% end %>
			</table>
					<%= link_to "買い物を続ける" ,products_path, class: "btn-sm btn-success" %>
					<%= link_to "情報入力に進む",new_order_path, class: "btn-lg btn-success" %>