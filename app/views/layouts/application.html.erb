<!DOCTYPE html>
<html>
  <head>
    <title>Maeticke</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
  <nav>
    <ul>
      <% if user_signed_in? %>
        <li><%= current_user.name %></li>
        <li><%= link_to "商品一覧", products_path %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      <% elsif owner_signed_in? %>
        <li><%= current_owner.name %></li>
        <li><%= link_to "商品一覧", owners_products_path %></li>
        <li><%= link_to "ジャンル一覧", owners_genres_path %></li>
        <li><%= link_to "マイページ", owners_user_path(current_owner) %></li>
        <li><%= link_to "ログアウト", destroy_owner_session_path, method: :delete %></li>
      <% elsif admin_signed_in? %>
        <li>管理者</li>
        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
      <% else %>
        <li>ゲストユーザー</li>
        <li><%= link_to "会員新規登録", new_user_registration_path %></li>
        <li><%= link_to "会員ログイン", new_user_session_path %></li>
        <li><%= link_to "オーナー新規登録", new_owner_registration_path %></li>
        <li><%= link_to "オーナーログイン", new_owner_session_path %></li>
        <li><%= link_to "管理者ログイン", new_admin_session_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
    <%= yield %>
  </body>
</html>
